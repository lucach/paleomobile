<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/bg"
	android:layout_width="fill_parent"
  	android:layout_height="fill_parent">
  	 		
  	<TextView
    	android:id="@+assignment/bar"
    	android:background="#ff0099CC"
    	android:textStyle="bold"
    	android:textColor="#000"
    	android:gravity="center"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"/>   
 
    <ScrollView
    	android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		android:layout_below="@assignment/bar"
  		android:paddingLeft="10dp"
  		android:paddingRight="10dp"
  		android:layout_marginTop="10dp">
    
    	<LinearLayout
  			android:orientation="vertical"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content">
  			
    		<TextView
    		    android:id="@+assignment/info_des"
				android:text="Descrizione:"
				android:textStyle="bold"
				android:textSize="18sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
	 		<TextView
    			android:id="@+assignment/description"
				android:textSize="18sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"/>
    		
    		<TextView
    		    android:id="@+assignment/info_ava"
				android:text="Termine consegne:"
				android:textStyle="bold"
				android:textSize="18sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"/>
	 		<TextView
    			android:id="@+assignment/available_from"
				android:textSize="18sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"/>

	 		<Button
	 		    android:id="@+assignment/button1"
	 		    android:layout_width="match_parent"
	 		    android:layout_height="wrap_content"
	 		    android:visibility="gone"
	 		    android:text="Apri risorsa web" />
	 	
	 		<Button
	 		    android:id="@+assignment/button2"
	 		    android:layout_width="match_parent"
	 		    android:layout_height="wrap_content"
	 		    android:visibility="gone"
	 		    android:text="Apri file" />
    		
    		<TextView
    		    android:id="@+assignment/info_due"
				android:text="Stato consegna:"
				android:textStyle="bold"
				android:textSize="18sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"/>

	 		<TextView
    			android:id="@+assignment/due"
				android:textSize="18sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"/>
    		
    		<TextView
    		    android:id= "@+assignment/info_turn"
				android:text="Stato valutazione:"
				android:textStyle="bold"
				android:textSize="18sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"/>
	 		<TextView
    			android:id="@+assignment/turned_in"
				android:textSize="18sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"/>
    		
			<TextView
			    android:id="@+assignment/info_grade"
				android:text="Voto:"
				android:textStyle="bold"
				android:textSize="18sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"/>
	 		<TextView
    			android:id="@+assignment/grade"
				android:textSize="18sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
	 			android:layout_marginBottom="15dp"/>
			

		</LinearLayout>
	</ScrollView>
	
</RelativeLayout>
